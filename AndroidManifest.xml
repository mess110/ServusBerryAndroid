<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mess110.servusberry"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ServusBerryActivity"
            android:label="@string/title_activity_servus_berry" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" >
        </activity>
        <activity
            android:name=".FileSystemActivity"
            android:label="File System" >
        </activity>
        <activity
            android:name=".RadioActivity"
            android:label="Radio" >
        </activity>
        <activity
            android:name=".RCActivity"
            android:label="@string/title_activity_rc" >
        </activity>
    </application>

</manifest>